<%= form_with model:@activity,local:true do |f| %>
    <div class="form-group">
        <%= f.label :branch_name, '拠点名' %>
        <%= f.text_field :branch_name, class: 'form-control' %>
        <small id="poster-tip" class="form-text text-muted">
            拠点名を入力してください。
        </small>
    </div>
    <div class="form-group">
        <%= f.label :title, 'アクティビティ名' %>
        <%= f.text_field :title, class: 'form-control' %>
        <small id="title-tip" class="form-text text-muted">
            アクティビティ名を入力してください。
        </small>
    </div>
    <div class="form-group">
        <%= f.label :content, 'アクティビティ内容' %>
        <%= f.text_area :content, class: 'form-control', rows:10 %>
        <small id="content-tip" class="form-text text-muted">
            アクティビティの内容を入力してください。 
        </small>
    </div>
    <!-- 画像投稿フォーム -->
    <div class="form-group">
        <%= f.label :img, '画像をアップロード' %><br><%= f.file_field :img %>
    </div>
    <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
        投稿する前に投稿内容を見直してください!
    </small>
<% end %>